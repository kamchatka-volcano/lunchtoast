include(FetchContent)
Set(FETCHCONTENT_QUIET FALSE)

if (NOT TARGET cmdlime)
    FetchContent_Declare(
        cmdlime
        GIT_REPOSITORY https://github.com/kamchatka-volcano/cmdlime.git
        GIT_TAG        294513e14c
        GIT_SHALLOW    ON
        GIT_PROGRESS   TRUE
    )

    FetchContent_MakeAvailable(cmdlime)
endif()